<Window x:Class="DemoApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoApp4"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Background="#e7fabf">
            <Label HorizontalAlignment="Center" Content="Вход" Margin="3"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button x:Name="ClientButton" Content="Клиент" Click="ClientButton_Click"/>
            <Button x:Name="AdminButton" Content="Админ" Click="AdminButton_Click"/>
            <TextBox x:Name="CodeTextBox" Visibility="Hidden"/>
            <Button x:Name="EnterCodeButton" Content="Ввести код" Visibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
